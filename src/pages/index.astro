---
import MainLayout from "../layouts/MainLayout.astro";
import PhotoGallery from "../components/PhotoGallery.astro";
---
<MainLayout>
    <section class="min-h-[70vh] flex items-center justify-center bg-cover bg-center px-4 py-12 md:py-16">
        <div class="text-center max-w-2xl mx-auto">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">Welcome to LENSCAPE</h1>
            <p class="mt-4 text-base md:text-lg text-gray-700">A place to showcase beautiful photography</p>
            <a href="/gallery"
               class="mt-8 inline-block px-6 py-3 border-2 border-black rounded-md
                      hover:bg-black hover:text-white transition-all duration-300
                      text-sm md:text-base font-medium
                      transform hover:scale-105 active:scale-95">
                View Gallery
            </a>
        </div>
    </section>

    <section class="py-8 container mx-auto px-4">
        <PhotoGallery />
    </section>
</MainLayout>
